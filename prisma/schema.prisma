generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../src/DAL/IoT-DB.db"
}

model Users {
  id String @id @default(uuid())
  username  String   @unique
  score     Int      @default(0)

  // each user belongs to exactly one guild
  guild      Guilds   @relation(fields: [guildId], references: [id])
  guildId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  ResponseUser ResponseUser[]
}

model Guilds {
  id String @id @default(uuid())
  // a guild can have many users
  users   Users[]

  name      String   @unique
  score     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Challenges {
  id String @id @default(uuid())
  name      String
  description String
  difficulty  Int
  questions   Questions[]
  isGuildChallenge Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Questions {
  id String @id @default(uuid())
  challenge      Challenges   @relation(fields: [challengeId], references: [id])
  challengeId    String
  questionText   String
  answerText     Answer[]
  points         Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Answer {
  id String @id @default(uuid())
  question      Questions   @relation(fields: [questionId], references: [id])
  questionId    String
  answer        String
  isCorrect     Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  ResponseUser ResponseUser[]
}

model ResponseUser {
  user      Users   @relation(fields: [userId], references: [id])
  userId    String
  answer      Answer   @relation(fields: [answerId], references: [id])
  answerId    String

  @@id([userId, answerId])
}